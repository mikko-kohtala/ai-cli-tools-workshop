{
  "name": "ai-cli-tools-workshop",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "initialize": "bun install && tsx scripts/initialize.ts",
    "dev": "bun install && turbo dev",
    "build": "turbo build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck",
    "check": "turbo check",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "copy-curriculum": "tsx scripts/copy-curriculum.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "chalk": "5.6.2",
    "tsx": "4.21.0",
    "turbo": "2.6.3",
    "typescript": "5.9.3",
    "ultracite": "6.3.9",
    "zx": "8.8.5"
  },
  "packageManager": "bun@1.3.3",
  "engines": {
    "node": ">=22"
  }
}
